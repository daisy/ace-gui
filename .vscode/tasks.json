{
  "version": "2.0.0",
  "isBackground": false,
  "presentation": {
    "reveal": "always",
    "panel": "new"
  },
  "env": {
    "DEBUG": "*",
    "NODE_ENV": "development"
  },
  "tasks": [
    {
      "label": "clean",
      "group": "build",
      "type": "shell",
      "command": "npm",
      "args": [
        "run",
        "clean"
      ],
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "build:prod",
      "group": "build",
      "type": "shell",
      "command": "npm",
      "args": [
        "run",
        "build:prod"
      ],
      "problemMatcher": [
        "$tsc",
        "$eslint-stylish"
      ],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "launch:attach",
      "isBackground": true,
      "group": "build",
      "type": "shell",
      "command": "npm",
      "args": [
        "run",
        "vscode:launch:attach"
      ],
      "problemMatcher": [
        {
          "base": "$tsc-watch",
          "applyTo": "allDocuments",
          "background": {
            "activeOnStart": true,
            "beginsPattern": ".",
            "endsPattern": ".",
          }
        }
      ],
      "problemMatcher__": [
        {
          "pattern": [
            {
              "regexp": ".",
              "file": 1,
              "location": 2,
              "message": 3
            }
          ],
          "background": {
            "activeOnStart": true,
            "beginsPattern": ".",
            "endsPattern": ".",
          }
        }
      ],
      "problemMatcher__": {
        "owner": "typescript",
        "fileLocation": "relative",
        "pattern": {
          "regexp": "^([^\\s].*)\\((\\d+|\\d+,\\d+|\\d+,\\d+,\\d+,\\d+)\\):\\s+(error|warning|info)\\s+(TS\\d+)\\s*:\\s*(.*)$",
          "file": 1,
          "location": 2,
          "severity": 3,
          "code": 4,
          "message": 5
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^\\s*\\d{1,2}:\\d{1,2}:\\d{1,2}(?: AM| PM)? - File change detected\\. Starting incremental compilation\\.\\.\\.",
          "endsPattern": "^\\s*\\d{1,2}:\\d{1,2}:\\d{1,2}(?: AM| PM)? - Compilation complete\\. Watching for file changes\\."
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "launch:hot",
      "isBackground": true,
      "group": "build",
      "type": "shell",
      "command": "npm",
      "args": [
        "run",
        "vscode:launch:hot"
      ],
      "problemMatcher": [
        {
          "base": "$tsc-watch",
          "applyTo": "allDocuments",
          "background": {
            "activeOnStart": true,
            "beginsPattern": ".",
            "endsPattern": ".",
          }
        }
      ],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    }
  ]
}