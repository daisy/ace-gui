{
  "name": "ace-gui",
  "productName": "Ace by DAISY",
  "description": "Ace, the EPUB accessibility checker by the DAISY Consortium (desktop application)",
  "version": "1.0.0-beta.2",
  "author": "DAISY Consortium",
  "homepage": "http://daisy.github.io/ace",
  "repository": "daisy/ace-gui",
  "license": "MIT",
  "main": "app/background.js",
  "build": {
    "appId": "org.daisy.ace",
    "files": [
      "app"
    ],
    "mac": {
      "category": "my.category",
      "icon": "build/icons/icon.icns",
      "target": "dmg"
    },
    "win": {
      "appId": "DaisyConsortium.Ace",
      "icon": "build/icons/icon.ico",
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false
    },
    "asar": false,
    "publish": {
      "provider": "github",
      "owner": "daisy",
      "repo": "ace-gui"
    }
  },
  "scripts": {
    "clean": "cross-env BUILD_TARGET=clean node build/build.js",
    "build:bundle": "webpack --config=build/webpack.app.config.js --env=production",
    "build": "yarn build:bundle && cpy --cwd=\"./kb\" --parents \"**/*\" \"../app/kb/\" && electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "release": "build -mw -p always",
    "start": "node build/start.js",
    "test": "echo TODO test the app"
  },
  "@daisy/ace-core": "^1.0.2",
  "dependencies": {
    "@daisy/ace-core": "file:../ace/packages/ace-core",
    "@daisy/ace-localize": "file:../ace/packages/ace-localize",
    "@daisy/ace-logger": "file:../ace/packages/ace-logger",
    "@material-ui/core": "^3.0.0",
    "@material-ui/icons": "^3.0.0",
    "@mrmlnc/readdir-enhanced": "^2.2.1",
    "about-window": "^1.12.1",
    "axe-core": "~2.6.1",
    "electron-debug": "^2.0.0",
    "electron-redux": "^1.3.1",
    "electron-store": "^3.2.0",
    "express": "^4.16.4",
    "jszip": "^3.1.5",
    "p-map": "^1.2.0",
    "portfinder": "^1.0.20",
    "prop-types": "^15.6.2",
    "react": "^16.3.0",
    "react-dom": "^16.2.0",
    "react-redux": "^5.0.7",
    "react-select": "^2.0.0",
    "react-splitter-layout": "^3.0.1",
    "redux": "^4.0.0",
    "redux-promise": "^0.6.0",
    "redux-thunk": "^2.3.0",
    "selfsigned": "^1.10.4",
    "tmp": "^0.0.33",
    "typeface-roboto": "^0.0.54",
    "uuid": "^3.3.2",
    "winston": "^2.4.0",
    "xmldom-alpha": "^0.1.28",
    "xpath": "^0.0.27"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "@types/express": "^4.16.1",
    "babel-loader": "^8.0.2",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^7.0.0-beta.3",
    "chalk": "^2.4.1",
    "cpy-cli": "^2.0.0",
    "cross-env": "^5.2.0",
    "css-loader": "^1.0.0",
    "devtron": "^1.4.0",
    "electron": "^5.0.0",
    "electron-builder": "^20.28.3",
    "electron-react-devtools": "^0.5.3",
    "file-loader": "^2.0.0",
    "friendly-errors-webpack-plugin": "^1.7.0",
    "node-sass": "^4.9.3",
    "progress": "^2.0.0",
    "rimraf": "^2.6.2",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.22.0",
    "webpack": "^4.12.0",
    "webpack-cli": "^3.0.4",
    "webpack-merge": "^4.1.3",
    "webpack-node-externals": "^1.7.2"
  }
}
